@model BrawlbotsMVC.Models.RobotData

@{
    ViewData["Title"] = "addRobot";
}

<h1>addRobot</h1>

<h4>RobotData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProcessCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weapon" class="control-label"></label>
                <input asp-for="Weapon" class="form-control" />
                <span asp-validation-for="Weapon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="type_of_movement" class="control-label"></label>
                <input asp-for="type_of_movement" class="form-control" />
                <span asp-validation-for="type_of_movement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="weight_class" class="control-label"></label>
                <input asp-for="weight_class" class="form-control" />
                <span asp-validation-for="weight_class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="team_name" class="control-label"></label>
                <input asp-for="team_name" class="form-control" />
                <span asp-validation-for="team_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="win_count" class="control-label"></label>
                <input asp-for="win_count" class="form-control" />
                <span asp-validation-for="win_count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="loss_count" class="control-label"></label>
                <input asp-for="loss_count" class="form-control" />
                <span asp-validation-for="loss_count" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
