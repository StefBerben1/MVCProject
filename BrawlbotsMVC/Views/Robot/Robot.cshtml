@model IEnumerable<BrawlbotsMVC.Models.RobotData>

@{
    ViewData["Title"] = "Robot toevoegen";
}

<h1>Robot overzicht</h1>

<p>
    <a asp-action="CreateRobotForm" asp-controller="Robot" class="btn btn-sm btn-primary" >Toevoegen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.type_of_movement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.weight_class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.team_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.win_count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.loss_count)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weapon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type_of_movement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.weight_class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.team_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.win_count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.loss_count)
            </td>
                <td><form asp-action="delete" asp-asp-controller="Robot" asp-route-id="@item.id"><button type="submit" class="btn btn-sm btn-danger ">Delete</button></form></td>
                <td><form asp-action="CreateEditForm" asp-asp-controller="Robot" asp-route-id="@item.id"><button type="submit" class="btn btn-sm btn-primary ">Edit</button></form></td>
        </tr>
}
    </tbody>
</table>
